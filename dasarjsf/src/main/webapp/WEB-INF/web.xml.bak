<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Basic JSF</display-name>

	<servlet>
		<servlet-name>MyFirstServlet</servlet-name>
		<servlet-class>id.co.skyworx.basicjsf.MyFirstServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CustomerServlet</servlet-name>
		<servlet-class>id.co.skyworx.basicjsf.CustomerServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MyFirstServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer/add</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer/update</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer/delete</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer/listcustomer</url-pattern>
	</servlet-mapping>

</web-app>
